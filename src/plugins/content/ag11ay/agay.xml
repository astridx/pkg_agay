    <authorUrl>www.astrid-guenther.de</authorUrl>
    <version>##VERSION##</version>
    <description>PLG_CONTENT_AGAY_DESC</description>
    <files>
            ##FILES##
    </files>
    <!-- Media files -->
    <media 
        folder="media/plg_content_agay" 
        destination="plg_content_agay">
            ##MEDIA_FILES##
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="classname" 
                    type="text" 
                    default="" 
                    label="PLG_CONTENT_AGAY_CLASSNAME_LABEL" 
                    description="PLG_CONTENT_AGAY_CLASSNAME_DESC" 
                />
                <field 
                    name="donthyphenateclassname" 
                    type="text" 
                    default="" 
                    label="PLG_CONTENT_AGAY_DONTAGHPHENATECLASSNAME_LABEL" 
                    description="PLG_CONTENT_AGAY_DONTAGHPHENATECLASSNAME_DESC" 
                />
                <field 
                    name="minwordlength" 
                    type="text" 
                    filter="integer" 
                    default="" 
                    label="PLG_CONTENT_AGAY_MINWORDLENGTH_LABEL" 
                    description="PLG_CONTENT_AGAY_MINWORDLENGTH_DESC" 
                />
                <field 
                    name="hyphenchar" 
                    type="text" 
                    default="" 
                    label="PLG_CONTENT_AGAY_AGHPHENCHAR_LABEL" 
                    description="PLG_CONTENT_AGAY_AGHPHENCHAR_DESC" 
                />
                <field 
                    name="urlhyphenchar" 
                    type="text" 
                    default="" 
                    label="PLG_CONTENT_AGAY_URLAGHPHENCHAR_LABEL" 
                    description="PLG_CONTENT_AGAY_URLAGHPHENCHAR_DESC" 
                />
                <field 
                    name="togglebox" 
                    type="textarea" 
                    rows="5" 
                    cols="25" 
                    filter="raw" 
                    default="" 
                    label="PLG_CONTENT_AGAY_TOGGLEBOX_LABEL" 
                    description="PLG_CONTENT_AGAY_TOGGLEBOX_DESC" 
                />
                <field 
                    name="displaytogglebox" 
                    type="list" 
                    default="" 
                    label="PLG_CONTENT_AGAY_DISPLAYTOGGLEBOX_LABEL" 
                    description="PLG_CONTENT_AGAY_DISPLAYTOGGLEBOX_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="remoteloading" 
                    type="list" 
                    default="" 
                    label="PLG_CONTENT_AGAY_REMOTELOADING_LABEL" 
                    description="PLG_CONTENT_AGAY_REMOTELOADING_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="enablecache" 
                    type="list" 
                    default="" 
                    label="PLG_CONTENT_AGAY_ENABLECACHE_LABEL" description="PLG_CONTENT_AGAY_ENABLECACHE_DESC">
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="enablereducedpatternset" type="list" default="" label="PLG_CONTENT_AGAY_ENABLEREDUCEDPATTERNSET_LABEL" description="PLG_CONTENT_AGAY_ENABLEREDUCEDPATTERNSET_DESC">
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="onhyphenationdonecallback" 
                    type="textarea" 
                    rows="5" 
                    cols="25" 
                    filter="raw" 
                    default="" 
                    label="PLG_CONTENT_AGAY_ONAGHPHENATIONDONECALLBACK_LABEL" 
                    description="PLG_CONTENT_AGAY_ONAGHPHENATIONDONECALLBACK_DESC" 
                />
                <field 
                    name="onerrorhandler" 
                    type="textarea" 
                    rows="5" 
                    cols="25" 
                    filter="raw" 
                    default="" 
                    label="PLG_CONTENT_AGAY_ONERRORHANDLER_LABEL" 
                    description="PLG_CONTENT_AGAY_ONERRORHANDLER_DESC" 
                />
                <field 
                    name="intermediatestate" 
                    type="list" default="" 
                    label="PLG_CONTENT_AGAY_INTERMEDIATESTATE_LABEL" 
                    description="PLG_CONTENT_AGAY_INTERMEDIATESTATE_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="hidden">PLG_CONTENT_AGAY_OPTION_HIDDEN</option>
                    <option value="visible">PLG_CONTENT_AGAY_OPTION_VISIBLE</option>
                </field>
                <field 
                    name="selectorfunction" 
                    type="textarea" 
                    rows="5" cols="25" 
                    filter="raw" 
                    default="" 
                    label="PLG_CONTENT_AGAY_SELECTORFUNCTION_LABEL" 
                    description="PLG_CONTENT_AGAY_SELECTORFUNCTION_DESC" 
                />
                <field 
                    name="safecopy" type="list" 
                    default="" label="PLG_CONTENT_AGAY_SAFECOPY_LABEL" description="PLG_CONTENT_AGAY_SAFECOPY_DESC">
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="doframes" type="list" default="" label="PLG_CONTENT_AGAY_DOFRAMES_LABEL" description="PLG_CONTENT_AGAY_DOFRAMES_DESC">
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="storagetype" type="list" default="" label="PLG_CONTENT_AGAY_STORAGETYPE_LABEL" description="PLG_CONTENT_AGAY_STORAGETYPE_DESC">
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="local">PLG_CONTENT_AGAY_OPTION_LOCAL</option>
                    <option value="session">PLG_CONTENT_AGAY_OPTION_SESSION</option>
                    <option value="none">PLG_CONTENT_AGAY_OPTION_NONE</option>
                </field>
                <field 
                    name="orphancontrol" type="list" default="" 
                       label="PLG_CONTENT_AGAY_ORPHANCONTROL_LABEL" description="PLG_CONTENT_AGAY_ORPHANCONTROL_DESC">
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="1">PLG_CONTENT_AGAY_ORPHANCONTROL_OPTION_1</option>
                    <option value="2">PLG_CONTENT_AGAY_ORPHANCONTROL_OPTION_2</option>
                    <option value="3">PLG_CONTENT_AGAY_ORPHANCONTROL_OPTION_3</option>
                </field>
                <field 
                    name="dohyphenation" 
                       type="list" 
                       default="" 
                       label="PLG_CONTENT_AGAY_DOAGHPHENATION_LABEL" 
                       description="PLG_CONTENT_AGAY_DOAGHPHENATION_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="persistentconfig" 
                       type="list" 
                       default="" 
                       label="PLG_CONTENT_AGAY_PERSISTENTCONFIG_LABEL" 
                       description="PLG_CONTENT_AGAY_PERSISTENTCONFIG_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="defaultlanguage" type="text" 
                       default="" 
                       label="PLG_CONTENT_AGAY_DEFAULTLANGUAGE_LABEL" 
                       description="PLG_CONTENT_AGAY_DEFAULTLANGUAGE_DESC" 
                />
                <field 
                    name="useCSS3hyphenation" 
                       type="list" 
                       default="" 
                       label="PLG_CONTENT_AGAY_USECSS3AGHPHENATION_LABEL" 
                       description="PLG_CONTENT_AGAY_USECSS3AGHPHENATION_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="true">PLG_CONTENT_AGAY_OPTION_ENABLED</option>
                    <option value="false">PLG_CONTENT_AGAY_OPTION_DISABLED</option>
                </field>
                <field 
                    name="unhide" 
                    type="list" 
                    default="" 
                    label="PLG_CONTENT_AGAY_UNHIDE_LABEL" 
                    description="PLG_CONTENT_AGAY_UNHIDE_DESC"
                >
                    <option value="">PLG_CONTENT_AGAY_OPTION_DEFAULT</option>
                    <option value="wait">PLG_CONTENT_AGAY_OPTION_WAIT</option>
                    <option value="progressive">PLG_CONTENT_AGAY_OPTION_PROGRESSIVE</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
